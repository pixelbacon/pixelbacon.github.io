{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**",
      "**/*.json"
    ]
  },
  "rules": {
    "arrow-parens": false,
    "indent": [true, "spaces", 2],
    "interface-name": false,
    "max-line-length": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": false,
    "quotemark": [true, "single"]
  }
}
