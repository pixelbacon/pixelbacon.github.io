$clearfix()
  &::after
    content ' '
    display table
    clear both

$screen()
  @media screen
    {block}

$screen_only()
  @media screen
    visibility visible
    {block}

  @media print
    visibility hidden
    display none

$print()
  @media print
    {block}

$print_only()
  @media print
    visibility visible
    {block}

  @media screen
    visibility hidden
    display none

$hTags()
  for $num in (1..6)
    h{$num}
      {block}

$print_pageBreakAfter()
  page-break-after always

$print_pageBreakBefore()
  page-break-before always

$smallerByTypeOf($decrement = 0.1, $base = 1, $measurement = 1em)
  for $n in (0..6)
    $split = $decrement * $n
    $fontSize = ($base - $split) * $measurement
    $width = 100% - (100% * ($n * $split))
    // $fontSize = (1 - (0.1 * $n)) * 1em

    &:nth-of-type({$n + 1})
      font-size $fontSize
      width $width
      margin-left auto
      margin-right auto
